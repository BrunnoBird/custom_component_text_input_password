<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PasswordEditText" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">numberPassword</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="password_charMargin">12dp</item>
        <item name="password_circleColor">@color/black</item>
        <item name="password_circleRadius">6dp</item>
        <item name="password_circleBorderWidth">2dp</item>
        <item name="password_charStyle">@style/TextAppearance.AppCompat.Small</item>
    </style>
</resources>
